<% layout('layouts/boilerplate') %>
    <h1 class="text-center m-3">Create a new Campground</h1>
    <div class="col col-md-6 offset-md-3">
        <form action="/campgrounds" class="col" method="POST" enctype="multipart/form-data">
            <div class="col-md-12 mb-3">
                <label for="inputEmail4" class="form-label">Title</label>
                <input type="text" name="campground[title]" class="form-control" id="inputEmail4">
            </div>
            <div class="col-md-12 mb-3">
                <label for="inputPassword4" class="form-label">Location</label>
                <input type="text" name="campground[location]" class="form-control" id="inputPassword4">
            </div>
            <div class="mb-3 col-md-12">
                <label for="image" class="form-label">Choose images of campground</label>
                <input class="form-control" name="image" type="file" id="image" multiple>
            </div>
            <div class="col-md-12 mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"> $ </span>
                    <input type="text" placeholder="0.00" name="campground[price]" class="form-control" id="price" aria-describedby="price">
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="campground[description]" id="description" aria-label="With textarea"></textarea>
            </div>
            <div class="d-flex justify-content-center flex-row mb-3">
                <button type="submit" class="btn me-md-5 me-3 btn-success">Create</button>
                <a href="/campgrounds" class="btn btn-secondary me-3 me-md-5">Back</a>
            </div>
        </form>
    </div>